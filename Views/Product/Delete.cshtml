@model FullstackHW.Models.ProductViewModel
@{
    ViewData["Title"] = "Delete Product";
    var imageFilePath= TempData["ImageFilePath"]?.ToString();
    if(imageFilePath=="/images/"){
        imageFilePath ="/images/NoData.jpg";
    }
    var source = TempData["Source"]?.ToString();
}
<h1>Delete</h1>
<h4>@ViewData["Title"]</h4>
<h5>You are going to delete this record. Are You sure? If YES,please click action Delete button below.</h5>
<form action="" method="post" class="w-75 mx-auto" >
    <div class="mb-3">
        <label for="Id">Id</label>
        <input type="text" class="form-control" id="Id" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="Name">Name of the Product</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" readonly>
    </div>
    <div class="mb-3">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" readonly>
    </div>
    <div class="mb-3">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" asp-for="Price" readonly>
    </div>
    <div class="mb-3">
        <label for="Source">Source: @source</label>
    </div>
    <div class="mb-3">
        <label for="ImageFileName">Image:</label>
        <input type="text" class="form-control" id="ImageFileName" asp-for="ImageFileName" readonly>
        <img src="@imageFilePath" width="120">
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-danger mx-auto d-inline" value="Delete">
        <input type="button" class="btn btn-primary mx-auto d-inline" value="Cancel" action="action" onclick="window.location.href='../'" readonly>
    </div>
</form>