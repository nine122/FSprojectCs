@model FullstackHW.Models.ProductViewModel
@{
    ViewData["Title"] = "Add Product";
}
<h1>Create</h1>
<h4>@ViewData["Title"]</h4>
<form enctype="multipart/form-data" method="post" asp-controller="Product" asp-action="Create" class="w-75 mx-auto" >
    <div class="mb-3">
        <label for="Name" class="form-label">Name of the Product</label>
        <input type="text" class="form-control" id="Name" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" class="form-control" id="Description" asp-for="Description">
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="number" class="form-control" id="Price" asp-for="Price">
    </div>
    
    <div class="mb-3">
        <label for="Source" class="form-label">Source</label>
        <div class="col-sm-9">
            <select asp-for="Source" class="form-select">
                <option value="Domestic">Domestic</option>
                <option value="Overseas">Overseas</option>
                <option value="Unkown">Unknown Source</option>
            </select>
        </div>
    </div>
    <div class="mb-3">
        <label for="Image" class="form-label">Image</label>
        <input type="file" class="form-control" name="ImageFile" id="ImageFileNmae"/>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-info mx-auto d-inline" value="Add">
        <input type="button" class="btn btn-primary mx-auto d-inline" value="Cancel" action="action" onclick="window.location.href='../Product'">
    </div>
</form>